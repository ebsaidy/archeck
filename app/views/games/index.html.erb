<style type="text/css">

table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    text-align: left;
    padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2}

th {
    background-color: #337ab7;
    color: white;
}

</style>
<center><h3>Games</h3></center></br>
<table border = 1>
  <tr>
  <th>Name of Game</th>
  <th>Description</th>
  <th>Normal Ball</th>
  <th>Power Ball</th>
  <th>Edit</th>
  <th>Delete</th>
  </tr>

	
  <% @a.transpose.map do |n, d, nob, pob, id|%>
<tr>

    
  	<td><%= n %></td>
    <td><%= d %></td>
  	<td><%= nob %></td>
    <td><%= pob %></td>
    <td><%= link_to image_tag("pencil.png", alt: "edit"), {:controller => 'games', :action => 'edit', :id => id }, :method => :get%></td>
    <td><%= link_to image_tag("delete.gif", alt: "delete"), {:controller => 'games', :action => 'destroy', :id => id }, :method => :delete, data: { confirm: "Are you sure You want to delete?" } %></td>
</tr>
<%end %>

</table>