
<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<center><h3>Add Winning Balls</h3></center></br>
		<form action="/webgames/winning_balls" method="post" class="">
			<label>Select Game</label>
			<select name="game_name" class="form-control">
				<option value="null">---Select Game---</option>
                <% @n.each do |t| %>
                <option value="<%=t %>"><%= t %></option>
                <% end %>
			</select>
			<label>Ball #1</label>
			<input type="text" name="first_ball" class="form-control" required=""></input>

			<label>Ball #2</label>
			<input type="text" name="second_ball" class="form-control" required=""></input>


			<label>Ball #3</label>
			<input type="text" name="third_ball" class="form-control"></input>

			<label>Ball #4</label>
			<input type="text" name="fourth_ball" class="form-control">

			<label>Ball #5</label>
			<input type="text" name="fifth_ball" class="form-control">

			<label>Power Ball #1</label>
			<input type="text" name="power_ball" class="form-control">

			<label>Draw Date</label>
			<input type="date" name="draw_date" class="form-control">

			<input type="submit" name="submit" value="Add Balls" class="btn btn-primary"></input>
		</form>
	</div>
</div>